<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <form action="" method="post">
        <div class="flex flex-col gap-2 pl-2 pt-2">
            <div>
                <label for="name">Event Name</label>
                <input required type="text" name="name" id="name" class="border">
            </div>
            <div>
                <label for="location">location</label>
                <input required type="text" name="location" id="location" class="border">
            </div>
            <div>
                <label for="description" class="block">description</label>
                <textarea name="description" id="description" cols="30" rows="10" class="border w-full"></textarea>
            </div>
            <div class="">
                <label for="type">Type</label>
                <input required type="text" name="type" id="type" class="border">
            </div>
            <div class="">
                <label for="department">department</label>
                <input required type="text" name="department" id="department" class="border">
            </div>

            <div class="flex gap-2">

                <input required type="time" name="time" id="time"
                    class="bg-gray-50 border  border-gray-300 text-gray-900 text-sm rounded-lg  block p-2.5 "
                    value="00:00"  />


                <input required type="date" name="date" id="" class="border">
            </div>
            <div>
                <label for="price">Price</label>
                <input required type="number" name="price" id="price" class="border">
            </div>
            <hr>
            <div class="flex flex-col gap-2">
                <div>
                    <label for="organiserName">organiser Name</label>
                    <input required type="text" name="organiserName" id="organiserName" class="border">
                </div>
                <div>
                    <label for="organiserEmail">organiser Email</label>
                    <input required type="email" name="organiserEmail" id="organiserEmail" class="border">
                </div>
                <div>
                    <label for="organiserDepartment">organiser department</label>
                    <input required type="text" name="organiserDepartment" id="organiserDepartment" class="border">
                </div>
            </div>
        </div>
        <button type="submit" class=" border font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Submit</button>
    </form>
</body>

</html>